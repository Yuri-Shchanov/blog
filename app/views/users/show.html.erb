<% if current_user.id == @user.id %>
    <h1>My profile</h1>
<% else %>
    <h1><%=@user.email%>'s profile</h1>
<% end %>
<%=link_to 'users', users_path%>

<h2>Articles</h2>
<%= render @user.articles %>

<h2>Add article:</h2>
<%= render 'articles/form' %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>